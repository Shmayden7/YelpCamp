<%- include("../partials/header"); %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
            <div style="width: 30%; margin: 25px auto">
                <form action="/campgrounds/<%= campground_id%>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= comment.text%> " name="comment[text]" id="">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block btn-lg btn-default">Submit!</button>
                    </div>
                    <a href="/campgrounds">Go Back</a>
                </form>
            </div>
    </div>
</div>
